{% extends 'base.html.twig' %}

{% block sidebar %}
    {% include 'shape/sidebar.html.twig' with { 'page' : 'index' } %}
{% endblock %}

{% block body %}
    <h1>Sales Report</h1>
    {{ form_start(form) }}
        <div class="row">
        <div class="form-group col-4">
            {{ form_label(form.product, 'Product') }}
            {{ form_widget(form.product, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group col-4">
            <input class="btn btn-success" style="right:0px; bottom:2px; position:absolute;" type="submit" value="Search" />
        </div>
        </div>
    {{ form_end(form) }}
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Product</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
        {% for sale in sales %}
            <tr>
                <td>{% if sale.date %}{{ sale.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ sale.product }}</td>
                <td>{{ sale.amount }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
