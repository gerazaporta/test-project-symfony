{% extends 'base.html.twig' %}

{% block sidebar %}
    {% include 'shape/sidebar.html.twig' with { 'page' : 'new' } %}
{% endblock %}

{% block body %}
    <h1>New Sale</h1>
    {{ form_start(form, {'attr': {'class': 'form'}}) }}
        <div class="form-group">
            {{ form_label(form.product, 'Product') }}
            {{ form_errors(form.product) }}
            {{ form_widget(form.product, {'attr': {'class': 'form-control col-4' }}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.amount, 'Amount') }}
            {{ form_errors(form.amount) }}
            {{ form_widget(form.amount, {'attr': {'class': 'form-control col-4' }}) }}
        </div>
        <input class="btn btn-primary" type="submit" value="New Sale" />
    {{ form_end(form) }}
{% endblock %}
